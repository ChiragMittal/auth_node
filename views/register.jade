html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet', media='screen')
    script(src='http://code.jquery.com/jquery.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
  .container
    h1 Register Page
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(name='name' , required='required', type='text',placeholder='Enter Full Name')
      .form-group
          input.form-control(type='text', name="id", placeholder='Enter Username' ,required='required')
       .form-group
          input.form-control(name='email' , required='required', type='text',placeholder='Enter Email')   
      .form-group
        input.form-control(type='password', name="password", placeholder='Password',required='required')
      .form-group
        input.form-control(type='password', name="password2", placeholder='Re-enter Password',required='required')  
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    h4= info
    a.text-center.new-account(href='/login') Already have an account? Sign in. 

 